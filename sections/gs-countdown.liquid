{%- liquid
    if section.settings.show_image
        assign columns = 2
    else 
        assign columns = 1
    endif
-%}

<section class="countdown" style="--countdownColor:{{ section.settings.countdownColor }};--countdownBg:{{ section.settings.countdownBg }}">
    <x-grid columns="{{ columns }}" columns-s="1">
        {%- if section.settings.show_image -%}
        <x-cell class="image" order="{{ section.settings.order }}" order-s="{{ section.settings.orderMob }}">
            <picture>
            {%- liquid
                assign img = section.settings.image
                if img != nil
                    render 'global-img' img: img, alt: img.alt, lazyload: true
                else
                    echo 'product-1' | placeholder_svg_tag: 'svg-placeholder'
                endif
            -%}
            </picture>
        </x-cell>
        {%- endif -%}

        <x-cell class="meta" order="2" order-s="1">
            <x-flex direction="column" style="gap:var(--padding)" ai="{{ section.settings.align-items }}" jc="{{ section.settings.justify-content }}">
            {%- for block in section.blocks -%}
            {%- case block.type -%}
                {%- when 'heading' -%}
                <x-cell {{ block.shopify_attributes }}>
                    <h2>{{ block.settings.heading }}</h2>
                </x-cell>

                {%- when 'countdown' -%}
                <x-cell {{ block.shopify_attributes }}>
                    <coretex-countdown
                        {% if block.settings.now == 'auto' and block.settings.timezone == blank %}
                        data-now="{{ "now" | date: "%Y-%m-%dT%H:%M:%S" }}"
                        {% else %}
                        data-timezone="{{ block.settings.timezone }}"
                        {% endif %}
                        data-date="{{ block.settings.date | escape }}" 
                        data-time="{{ block.settings.time | escape }}"
                        data-message="{{ block.settings.final_message | escape }}" 
                        data-weeks="{{ block.settings.show_weeks }}"
                        data-seconds="{{ block.settings.show_seconds }}"
                        style="--countdownBlockBg:{{ block.settings.countdownBg }};--countdownBlockColor:{{ block.settings.countdownColor }}"
                    >
                        <x-flex class="countdowner timer {% if block.settings.show_border %}sb{% endif %}" style="gap:.5rem">
                            {% if block.settings.show_weeks == true %}<x-cell class="weeks"><span class="date">00</span> <span class="label">{{ 'countdown.weeks' | t }}</span></x-cell>{% endif %}
                            <x-cell class="days"><span class="date">00</span> <span class="label">{{ 'countdown.days' | t }}</span></x-cell>
                            <x-cell class="hours"><span class="date">00</span> <span clasS="label">{{ 'countdown.hours' | t }}</span></x-cell>
                            <x-cell class="mins"><span class="date">00</span> <span clasS="label">{{ 'countdown.minutes' | t }}</span></x-cell>
                            {% if block.settings.show_seconds == true %}<x-cell class="secs"><span class="date">00</span> <span clasS="label">{{ 'countdown.seconds' | t }}</span></x-cell>{% endif    %}
                        </x-flex>
                    </coretex-countdown>
                </x-cell>

                {%- when 'text' -%}
                <x-cell {{ block.shopify_attributes }}>
                    <div class="rte">{{ block.settings.text }}</div>
                </x-cell>

                {%- when 'button' -%}
                <x-cell {{ block.shopify_attributes }}>
                    {% if block.settings.label != nil %}<a href="{{ block.settings.url }}" class="button is-primary">{{ block.settings.label }}</a>{%- endif -%}
                </x-cell>
            {%- endcase -%}
            {%- endfor -%}
            </x-flex>
        </x-cell>
    </x-grid>
</section>

<script>window.dateStrings = { week: `{{ 'countdown.week' | t }}`, weeks: `{{ 'countdown.weeks' | t }}`, day: `{{ 'countdown.day' | t }}`, days: `{{ 'countdown.days' | t }}`, hour: `{{ 'countdown.hour' | t }}`, hours: `{{ 'countdown.hours' | t }}`, minute: `{{ 'countdown.minute' | t }}`, minutes: `{{ 'countdown.minutes' | t }}`, second: `{{ 'countdown.second' | t }}`, seconds: `{{ 'countdown.seconds' | t }}` }</script>

<script type="module" src="{{ 'countdown.js' | asset_url }}"></script>

{% schema %}
{
  "name": "Countdown timer",
  "disabled_on": { "groups": ["header", "footer", "aside"] },
  "presets": [
    {
      "name": "Countdown timer",
      "blocks": [
        { "type": "heading" },
        { "type": "countdown" },
        { "type": "button" }
      ]
    }
  ],
  "settings": [
    {
        "type": "header",
        "content": "Image"
    },
    {
        "type": "checkbox",
        "id": "show_image",
        "label": "Show image",
        "default": true
    },
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
    },
    {
        "type": "select",
        "id": "order",
        "label": "Image position - desktop",
        "default": "1",
        "options": [
            { "value": "1", "label": "Left" },
            { "value": "3", "label": "Right" }
        ]
    },
    {
        "type": "select",
        "id": "orderMob",
        "label": "Image position - mobile",
        "default": "1",
        "options": [
            { "value": "1", "label": "Image first" },
            { "value": "3", "label": "Image last" }
        ]
    },
    {
        "type": "header",
        "content": "Content"
    },
    {
          "type": "select",
          "id": "justify-content",
          "label": "Position",
          "default": "center",
          "options": [
            { "value": "start", "label": "Top" },
            { "value": "center", "label": "Center" },
            { "value": "end", "label": "Bottom" }
          ]
    },
    {
          "type": "select",
          "id": "align-items",
          "label": "Alignment",
          "default": "center",
          "options": [
            { "value": "start", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "end", "label": "Right" }
          ]
    },
    {
        "type": "header",
        "content": "Appearance"
    },
    {
        "type": "color",
        "id": "countdownColor",
        "label": "Text color",
        "default": "#000000"
    },
    {
        "type": "color",
        "id": "countdownBg",
        "label": "Background color",
        "default": "#fff"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        }
      ]
    },
    {
        "type": "countdown",
        "name": "Countdown timer",
        "limit": 1,
        "settings": [
            {
                "type": "header",
                "content": "Time"
            },
            {
                "type": "text",
                "id": "date",
                "label": "Countdown target date",
                "default": "12-31-2026",
                "placeholder": "MM-DD-YYYY",
                "info": "Enter the date in MM-DD-YYYY format (month-day-year). Example: 12-31-2026"
            },
            {
                "type": "text",
                "id": "time",
                "label": "Countdown target time",
                "default": "00:00:00",
                "placeholder": "HH:MM:SS",
                "info": "Enter the time in HH:MM:SS format (24-hour clock). Example: 15:30:59"
            },
            {
                "type": "select",
                "id": "now",
                "label": "Time zone",
                "default": "auto",
                "info": "When set to auto, the time zone is retrieved from your store's [time zone settings](https://shopify.com/admin/settings/general). However, due to caching, this may occasionally fail to display the correct time.",
                "options": [
                    { "value": "auto", "label": "Auto" },
                    { "value": "custom", "label": "Custom time zone" }
                ]
            },
            {
                "type": "text",
                "id": "timezone",
                "label": "Custom time zone",
                "placeholder": "Europe/Copenhagen",
                "info": "Format: Asia/Tokyo"
            },
            {
                "type": "paragraph",
                "content": "View the [complete list](https://en.wikipedia.org/wiki/List_of_tz_database_time_zones#List) of IANA TZ identifiers."
            },
            {
                "type": "checkbox",
                "id": "show_weeks",
                "label": "Show weeks",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "show_seconds",
                "label": "Show seconds",
                "default": true
            },
            {
                "type": "header",
                "content": "Message"
            },
            {
                "type": "textarea",
                "id": "final_message",
                "label": "Message",
                "default": "It's over!",
                "info": "Upon completion of the countdown, display a message."
            }
        ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 2,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Get the deal!"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    }
  ]
}
{% endschema %}