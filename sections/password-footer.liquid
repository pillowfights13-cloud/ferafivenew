<footer>
<x-grid columns="2" columns-s="1" ai="center" style="gap:var(--padding)">
	{%- if section.settings.social -%}
    <x-cell id="f-socials" class="ssocialss">
        <ul class="no-style{% if settings.iconsTrue == true %} iconstrue{% endif %}">
            {% render 'global-social' %}
        </ul>
    </x-cell>
	{%- endif -%}

	{%- if section.settings.password -%}
	<x-cell>

	{%- comment -%} Card 1 {%- endcomment -%}
	<span id="login" hidden>{{ 'login.login' | t }}</span>
    <div x-flex direction="column" class="password-form-wrapper">
        <x-cell as="end">
            <a href="#!" class="button is-blank">
                <span class="visually-hidden">{{ 'header.close' | t }}</span>
                {%- render 'global-icon' with 'x' -%}
            </a>
        </x-cell>

    	<div class="password-form-box">
    	{%- form 'storefront_password' -%}
    		<x-grid columns="4" columns-s="5" style="gap:var(--globalBorderWidth)">
                {%- if section.settings.heading != empty -%}
                <x-cell span="row">
                    <label for="passwordLogger" class="text-normal">{{ section.settings.heading }}</label>
                </x-cell>
                {%- endif -%}
    			<x-cell span="1-3">
                    {%- if section.settings.heading == empty -%}<label for="passwordLogger" class="visually-hidden">{{ 'login.password' | t }}</label>{%- endif -%}
    				<input id="passwordLogger" type="password" name="password" placeholder="{{ 'login.password' | t }}" class="fullwidth">
    			</x-cell>
    			<x-cell span-s="4..">
                    <style>@media(max-width:777px) { #enter { padding-inline: 0 } }</style>
    				<button type="submit" name="commit" id="enter" class="is-blank">{{ 'login.login' | t }}</button>
    			</x-cell>
    			{%- if form.errors -%}
    			<x-cell span="row">
                    <script>window.addEventListener('DOMContentLoaded', () => { window.location.hash = 'login'; document.querySelector('#passwordLogger').focus() })</script>
                    <small role="status">{{ form.errors | default_errors }}</small>
    			</x-cell>
    			{%- endif -%}
    		</x-grid>
    	{%- endform -%}
    	</div>
    </div>

	{%- comment -%} Card 2 {%- endcomment -%}
	<span id="loginFire" tabindex="-1" hidden>{{ 'login.login' | t }}</span>
	<div class="text-end text-center-s">
		<a href="#login" class="button is-blank">{{ 'login.login' | t }}</a>
	</div>
	</x-cell>
	{%- endif -%}
</x-grid>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "social",
      "label": "Show social media links",
      "default": true,
      "info": "Link your social network accounts in your [Theme settings > Social media](/editor?context=theme&category=social+media) to display them."
    },
    {
      "type": "checkbox",
      "id": "password",
      "label": "Show password box",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "info": "Leave blank to disable.",
      "default": "Enter store using password"
    }
  ]
}
{% endschema %}