<section class="logo-list scrolling"
    style="{{ section.settings.headingBg | prepend: '--logoListBg:' | append: ';' }} {{ section.settings.headingColor | prepend: '--logoListColor:' | append: ';' }} {{ section.settings.headingAlignment | prepend: '--logoListTextAlignment:' | append: ';' }} {{ section.settings.logoWidth | prepend: '--logoWidth:' | append: 'px;' }} {{ section.settings.logoPadding | prepend: '--logoPadding:' | append: 'px;' }}">
    {%- if section.settings.heading != blank -%}
    <h3 class="gs-title">{{ section.settings.heading }}</h3>
    {%- endif -%}
    <ferafive-marquee go
        ferafive-reverse="{{ section.settings.marqueeDirection }}" 
        ferafive-speed="{{ section.settings.marqueeSpeeds }}" 
        ferafive-pause="{{ section.settings.marqueePause }}"
        ferafive-image="true"
    >
        {%- for i in (1..10) -%}
        <x-flex direction="row" ai="center" class="projectile" {% unless forloop.first %}aria-hidden="true"{% endunless %}>
            {% for block in section.blocks %}
                <span {{ block.shopify_attributes }}> 
                    {% if block.settings.link != blank %}<a href="{{ block.settings.link }}" class="no-style" {%- if block.settings.newTab == true -%}rel="nofollow noopener noreferrer" target="_blank"{%- endif -%}>{% endif %}
                    <picture>
                    {%- liquid
                        assign img = block.settings.image 
                        if img != nil 
                            render 'global-img' img: img, width: 500, loading: "lazy"
                        else 
                            echo 'image' | placeholder_svg_tag: 'svg-placeholder'
                        endif 
                    -%}
                    </picture>
                    {% if block.settings.link != blank %}</a>{% endif %}
                </span>
            {% endfor %}
        </x-flex>
        {%- endfor -%}
    </ferafive-marquee>
</section>

{% schema %}
{
  "name": "Scrolling logo list",
  "disabled_on": { "groups": ["header", "aside"] },
  "presets": [
    {
      "name": "Scrolling logo list",
      "blocks": [
        { "type": "logo_image" },
        { "type": "logo_image" },
        { "type": "logo_image" },
        { "type": "logo_image" },
        { "type": "logo_image" },
        { "type": "logo_image" }
      ]
    }
  ],
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "info": "Leave blank to remove heading."
    },
    {
      "type": "select",
      "id": "headingAlignment",
      "label": "Heading alignment",
      "default": "start",
      "options": [
        {
          "value": "start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "Right"
        }
      ]
    },
    {
        "type": "range",
        "label": "Logo max width",
        "id": "logoWidth",
        "min": 40,
        "max": 150,
        "step": 10,
        "default": 60
    },
    {
        "type": "range",
        "label": "Space between logos",
        "id": "logoPadding",
        "min": 0,
        "max": 100,
        "step": 5,
        "default": 30
    },
    {
        "type": "select",
        "id": "marqueeDirection",
        "label": "Scroll direction",
        "default": "false",
        "options": [
            { "value": "false", "label": "Right to left" },
            { "value": "true", "label": "Left to right" }
        ]
    },
    {
        "type": "range",
        "label": "Scrolling speed",
        "id": "marqueeSpeeds",
        "min": 20,
        "max": 200,
        "step": 5,
        "default": 100
    },
    {
        "type": "checkbox",
        "id": "marqueePause",
        "label": "Pause scrolling on hover",
        "default": true
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "color",
      "id": "headingBg",
      "label": "Background color",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color",
      "id": "headingColor",
      "label": "Heading color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "logo_image",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
            "type": "checkbox",
            "id": "newTab",
            "label": "Open link in tab",
            "default": false
        }
      ]
    }
  ]
}
{% endschema %}