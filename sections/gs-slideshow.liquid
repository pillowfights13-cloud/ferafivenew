        "label": "Show navigation buttons",
        "default": true
    },
    {
        "type": "header",
        "content": "Transition effects"
    },
    {
        "type": "select",
        "id": "slideshow_type",
        "label": "Slider type",
        "default": "slide",
        "info": "Save to view changes.",
        "options": [
